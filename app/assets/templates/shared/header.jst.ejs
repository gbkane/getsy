
<div class="header-wrapper">

    <ul class="nav-left group">
      <li>
        <% if (Getsy.currentUser.isSignedIn()){ %>
          <a class="getsy" href="#/shops">Getsy</a>
        <% }else{ %>
          <a class="getsy" href="">Getsy</a>
        <% } %>
      </li>

      <li>
        <input class="text-search" type="text" name="searchcontent" value=""
          placeholder="Search for items or shops">
      </li>

      <li>
        <button class="search">Search</button>
      </li>
    </ul>

    <% if(Getsy.currentUser.isSignedIn()) { %>

      <ul class="nav-right group">
        <li><a href="#/shops">Home</a></li>
        <li><a href="#/users/<%= Getsy.currentUser.id %>">
          <%= Getsy.currentUser.escape("first_name") %>
          </a>
        </li>

        <li>
          <button class="sign-out" id="sign-out-link">Sign Out</button>
        </li>

        <li><a href="#/carts/<%= Getsy.currentCart.id %>">Cart</a></li>
      </ul>

    <% } else { %>

      <ul class="nav-right group">
        <li><a href="">Home</a></li>
        <li><a href="#/session/new">Sign In</a></li>
        <li><a href="#/users/new">Register</a></li>
        <li><a href="#/carts/<%= Getsy.currentCart.id %>">Cart</a></li>
      </ul>
    <% } %>

</div>
