<ul class="all-items group">
  <% shops.each (function (shop){ %>
    <li>
      <ul class="items-by-shop group">

        <% for(var i = 0; i < 4 && i <= shop.items().length -1; i++){ %>
          <li>
            <a href="#shops/<%= shop.id %>/items/<%=shop.items().models[i].id%>">
              <img src="<%=shop.items().models[i].escape('main_image_url') %>"
                alt='image'>
                <span class="mask"></span>
            </a>
          </li>
        <% } %>

        <a class="nav-link" href="/#shops/<%= shop.escape('id') %>">
          <%= shop.escape('name') %>
        </a>
        <a class="nav-link item-count" href="/#shops/<%= shop.escape('id') %>">
          <%= shop.items().length %> items >
        </a>
      </ul>

    </li>
  <% }); %>
</ul>
