<h2>Sign Up</h2>

<form>

  <label>
    First Name
    <input type="text" name="user[fname]"
           value="<%= user.escape("fname") %>">
  </label>

  <br>

  <label>
    Last Name
    <input type="text" name="user[lname]"
           value="<%= user.escape("lname") %>">
  </label>

  <br>

  <label>
    Email
    <input type="email" name="user[email]"
           value="<%= user.escape("email") %>">
  </label>

  <br>

  <label>
    Password
    <input type="password" name="user[password]"
           value="<%= user.escape("password") %>">
  </label>

  <br>

  <button>Create Account</button>

</form>
