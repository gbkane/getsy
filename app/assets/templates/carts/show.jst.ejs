<section class="cart-container">
  <h1 class="cart">Cart</h1>

  <section id="orders">
    <% if(Getsy.currentCart.orders().length === 0){ %>
      <h2 class="empty-cart">Your Cart is Empty!</h2>
    <% }else{ %>
    <h4 class="cart-total">Total: $<%= Getsy.currentCart.get('total').toFixed(2) %></h4>
    <% } %>
  </section>

  <button class="checkout">Checkout</button>
</section>
