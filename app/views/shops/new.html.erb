<h1>Register a new shop!</h1>
<%= flash[:errors].join("<br>").html_safe if flash[:errors] %>
<form action="<%= shops_url %>" method="post">
  <input type="hidden"
    name="authenticity_token"
    value="<%= form_authenticity_token %>">
  <label>Shop name:
    <input type="text" name="shop[name]" value="<%= @shop.name %>">
  </label>
  <br><br>

  <label>Description
    <textarea name="shop[description]"></textarea>
  </label>
  <br><br>

  <button class="submit">Submit</button>

</form>
